<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    android:layout_margin="5dp"
    android:background="#8b3e2f"
    >
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8b3e2f">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="image"
            android:layout_alignParentTop="true" />
        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/icon"
            android:textColor="#fffaf0"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="5dp"
            android:id="@+id/name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="cursive"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:layout_alignLeft="@+id/price"
            android:layout_alignStart="@+id/price"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#ffefdb"
            android:id="@+id/desc"
            android:layout_alignRight="@+id/price"
            android:layout_alignEnd="@+id/price"
            android:fontFamily="sans-serif" />
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="#ffefdb"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/name"
            android:layout_alignLeft="@+id/name"
            android:layout_alignStart="@+id/name"
            android:layout_alignRight="@+id/name"
            android:layout_alignEnd="@+id/name" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
